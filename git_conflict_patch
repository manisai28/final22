
merge conflict :

git init

# Create demo.txt manually with:
# Line 1
# Line 2 from MASTER
# Line 3

git add demo.txt
git commit -m "Master version 1"

git checkout -b featureA

# Now edit demo.txt manually to:
# Line 1
# Line 2 from FEATUREA
# Line 3

git add demo.txt
git commit -m "FeatureA version"

git checkout master

# Now edit demo.txt manually to:
# Line 1
# Line 2 from MASTER DIFFERENT
# Line 3

git add demo.txt
git commit -m "Master version 2"

git merge featureA


